<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/logo_gear_guard"
        android:layout_width="325dp"
        android:layout_height="325dp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnControle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnControle"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:text="Controle"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="0dp"
        app:cornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/logo_gear_guard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnLogs"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:text="Logs"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        app:cornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnControle"
        app:layout_constraintStart_toStartOf="@id/btnControle"
        app:layout_constraintEnd_toEndOf="@id/btnControle"/>

    <Button
        android:id="@+id/btnDocumentacao"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:text="Documentação"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        app:cornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/btnLogs"
        app:layout_constraintStart_toStartOf="@id/btnLogs"
        app:layout_constraintEnd_toEndOf="@id/btnLogs"/>

</androidx.constraintlayout.widget.ConstraintLayout>